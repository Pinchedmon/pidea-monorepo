{
  "name": "@tutor1/backend",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "ts-node-dev --watch ./.env --rs --exit-child  ./src/index.ts",
    "build": "rimraf ./dist && tsc --build ./tsconfig.json",
    "start": "node ./dist/index.js",
    "pmd": "prisma migrate dev",
    "pgc": "prisma generate",
    "types": "tsc --noEmit --project ./tsconfig.json",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext .ts .",
    "prettify": "prettier --loglevel warn --cache --write '{src/**/*,*}.{ts,tsx,js,json,yml,scss}' '!**/{node_modules,dist}/**/*'",
    "prepare": "pnpm pgc"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.421.0",
    "@aws-sdk/s3-request-presigner": "^3.421.0",
    "@prisma/client": "^5.22.0",
    "@sentry/integrations": "^7.70.0",
    "@sentry/node": "^7.70.0",
    "@trpc/server": "11.0.0-rc.682",
    "@tutor1/webapp": "workspace:*",
    "axios": "^1.5.0",
    "cloudinary": "^1.41.0",
    "cors": "^2.8.5",
    "cron": "^2.4.3",
    "date-fns": "^2.30.0",
    "debug": "^4.3.4",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "fast-glob": "^3.3.1",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mjml": "^4.14.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "picocolors": "^1.0.0",
    "randomstring": "^1.3.0",
    "react-router-dom": "^6.15.0",
    "serialize-error": "8.1.0",
    "superjson": "^1.13.3",
    "triple-beam": "^1.4.1",
    "trpc-playground": "^1.0.4",
    "winston": "^3.10.0",
    "yaml": "^2.3.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@sentry/cli": "^2.21.1",
    "@types/cors": "^2.8.13",
    "@types/cron": "^2.4.0",
    "@types/debug": "^4.1.8",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.14",
    "@types/node": "^20.5.0",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^3.0.13",
    "@types/randomstring": "^1.1.9",
    "@types/triple-beam": "^1.3.3",
    "eslint": "^9.17.0",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^15.14.0",
    "prisma": "^5.22.0",
    "typescript-eslint": "^8.19.0"
  }
}
